<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/medium_8dp">

  <TextView
    android:id="@+id/movie_review_content_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="5"
    tools:text="[Just some Content.........]"/>


  <TextView
    android:id="@+id/movie_review_author_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/movie_review_content_text_view"
    android:paddingTop="@dimen/small_4dp"
    android:gravity="end"
    tools:text="[written by Hoho]"/>
</RelativeLayout>